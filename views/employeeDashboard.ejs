    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr("#dateRange", {
            mode: "range",
            dateFormat: "Y-m-d",
            altInput: true,
            altFormat: "F j, Y",
            allowInput: true,
            onChange: function (selectedDates) {
                // Check if two dates are selected
                if (selectedDates.length === 2) {
                    // Get start and end dates in YYYY-MM-DD format
                    const startDate = selectedDates[0].toISOString().split('T')[0];
                    const endDate = selectedDates[1].toISOString().split('T')[0];

                    // Create a hidden input field to store startDate and endDate
                    let startDateInput = document.querySelector('input[name="startDate"]');
                    let endDateInput = document.querySelector('input[name="endDate"]');

                    // Create or update hidden inputs for start and end dates
                    if (!startDateInput) {
                        startDateInput = document.createElement('input');
                        startDateInput.type = 'hidden';
                        startDateInput.name = 'startDate';
                        document.getElementById('filterForm').appendChild(startDateInput);
                    }
                    if (!endDateInput) {
                        endDateInput = document.createElement('input');
                        endDateInput.type = 'hidden';
                        endDateInput.name = 'endDate';
                        document.getElementById('filterForm').appendChild(endDateInput);
                    }

                    // Set the values of the hidden inputs
                    startDateInput.value = startDate;
                    endDateInput.value = endDate;
                }
            }
        });

        let sidebar = document.querySelector(".sidebar");
        let sidebarBtn = document.querySelector(".sidebarBtn");
        let logoDiv = document.querySelector(".logo-details");
        let abouts = document.querySelector(".ab");

        sidebarBtn.onclick = function () {
            sidebar.classList.toggle("active");
            if (sidebar.classList.contains("active")) {
                sidebarBtn.classList.replace("bx-menu", "bx-menu-alt-right");
                logoDiv.style.display = 'none';
                abouts.style.display = "none"

            } else {
                sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
                logoDiv.style.display = 'block';
                abouts.style.display = 'block';

            }
        }

        document.querySelectorAll('.EMTRFs-item').forEach(item => {
            item.addEventListener('click', () => {
                // Toggle the 'active' class on the clicked item
                item.classList.toggle('active');
            });
        });

        document.getElementById('btnTRF').addEventListener('click', function (event) {
            event.preventDefault();
            document.getElementById('contentTRF').style.display = 'block';
            document.getElementById('contentSRF').style.display = 'none';
            this.classList.add('active');
            document.getElementById('btnSRF').classList.remove('active');
        });

        document.getElementById('btnSRF').addEventListener('click', function (event) {
            event.preventDefault();
            document.getElementById('contentSRF').style.display = 'block';
            document.getElementById('contentTRF').style.display = 'none';
            this.classList.add('active');
            document.getElementById('btnTRF').classList.remove('active');
        });

        // Initialize default display
        document.getElementById('contentTRF').style.display = 'block';  // TRF is displayed by default
        document.getElementById('contentSRF').style.display = 'none';   // SRF is hidden by default
    </script>
</body>

